<h1 class="d-flex justify-content-center mb-4">All Pets</h1>
<div class="d-flex justify-content-center">
  <div class="btn btn-outline-success index-button mx-4"><%= link_to "Add your pet", new_pet_path %></div>
  <div class="btn btn-outline-success index-button mx-4"><%= link_to "See your playdates", user_play_dates_path(@user) %></div>
</div>
<br>
<br>
<div class="row">
  <% @pets.each do |pet| %>
    <div class="col-md-3">
      <%= link_to pet_path(pet), class:"text-decoration-none" do %>
        <div class="card mb-3">
          <img src="https://miro.medium.com/max/650/0*zV9kLZ9GyYscLrhX.jpg" class="card-img-top img-fluid" alt="dog">
          <div class="card-body">
            <h3 class="card-title"><%= pet.name %></h3>
            <h5 class="card-location">Location</h5>
            <p class="card-rating">5‚≠ê</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
