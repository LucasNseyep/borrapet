<%# url(https://images.lifestyleasia.com/wp-content/uploads/sites/7/2021/03/02155402/photo-1610575828349-43f195e95452.jpeg) %>


<div class="row">
  <% @pets.each do |pet| %>
    <div class="col-md-3">
      <%= link_to pet_path(pet), class:"text-decoration-none" do %>
        <div class="card mb-3">
          <img src="https://miro.medium.com/max/650/0*zV9kLZ9GyYscLrhX.jpg" class="card-img-top img-fluid" alt="dog">
          <div class="card-body">
            <h3 class="card-title"><%= pet.name %></h3>
            <h5 class="card-location">Location</h5>
            <p class="card-rating">5‚≠ê</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>



<ul>
  <% @pets.each do |pet| %>
  <%# LINK THROUGH THE PHOTO IN FINAL ONE %>
  <li>
    <%= link_to pet.name, pet_path(pet) %>
  </li>
  <% end %>
</ul>
