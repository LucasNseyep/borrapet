<h1><%= @pet.name %></h1>
<p>Find me in app/views/pets/show.html.erb</p>
<%= link_to "+ add new play date", new_pet_play_date_path(params[:id]) %>
<%= link_to "see your playdates", user_play_dates_path(@user) %>


<%= simple_form_for [@pet, @play_date] do |f| %>
  <%= f.input :start_time %>
  <%= f.input :end_time %>
  <%# <%= f.input :photo, as: :file %>
  <%= f.button :submit %>
<% end %>


<ul class="list-group">
  <li><%= @pet.name %></li>
  <li><%= @pet.breed %></li>
  <li><%= @pet.pet_type %></li>
  <li><%= @pet.bio %></li>
  <li><%= @user.description %></li>
</ul>
<br>
<ul class="play_dates">
  <% @pet.play_dates.each do |play_date| %>
    <li><%= play_date.start_time %></li>
    <li><%= play_date.end_time %></li>
    <li><%= play_date.pet.name %></li>
  <li><% end %></li>
</ul>
<br>
<%= link_to "view all available pets", pets_path %>
