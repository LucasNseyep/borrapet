  <% if @pet.photo.attached? == false %>
    <img src="https://miro.medium.com/max/650/0*zV9kLZ9GyYscLrhX.jpg" alt="dog">
  <% else %>
    <%= cl_image_tag @pet.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>

<h1><%= @pet.name %> the <%= @pet.pet_type.capitalize %></h1>

<div class="btn btn-outline-success index-button"><%= link_to "update your pets info", edit_pet_path(@pet) %></div>
  <p class="fs-6 fw-bold mb-0">About <%= @pet.name %></p>
  <p><%= @pet.bio %></p>
  <p class="fs-6 fw-bold mb-0">About <%= @pet.user.first_name %> <%= @pet.user.last_name %></p>
  <p><%= @user.description %>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>

  <p class="fs-6 fw-bold mb-0">Average rating</p>
  <% if @pet.average == 0 %>
    <p class="card-rating"> 5.0⭐</p>
  <% else %>
    <p class="card-rating"><%= @pet.average %>⭐</p>
  <% end %>

<h4>Book a playdate with <%= @pet.name %>:</h4>


<%= simple_form_for [@pet, @play_date], data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :start_time, as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
  <%= f.input :end_time, as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
  <%= f.submit 'Schedule playdate' %>
<% end %>

<h2 class="mt-3">Playdates</h2>
<div class="row">
  <% if @play_dates.present? %>
      <% @play_dates.each do |play_date| %>
      <div class="col-md-3">
        <div class="card border border-secondary-subtle mb-3 mt-3 " style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Your playdate with <%= play_date.pet.name %></h5>
            <p class="card-text"> Starting at: <%= play_date.start_time.strftime('%Y-%m-%d') %></p>
            <p class="card-text"> Finishing at: <%= play_date.end_time.strftime('%Y-%m-%d') %></p>
            <p class="card-text"><%= link_to "Review your play date", new_play_date_review_path(play_date) %></p>
            <p class="card-text"><%= link_to "update your play date information", edit_play_date_path(play_date) %></p>
          </div>
        </div>
      </div>
      <% end %>
    <% else %>
      <p>You don't have any playdates with <%= @pet.name %>.</p>
  <% end %>
</div>

<p class="card rating">Reviews</p>

<% @pet.play_dates.each do |play_date|
  reviews = @reviews.first(3).select { |review| review.play_date_id == play_date[:id] }
  reviews.each do |review| %>
    <p>Review:</p>
    <p><%= review.content %></p>
    <br>
  <% end %>
<% end %>

