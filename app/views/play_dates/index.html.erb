<h1>Your PlayDates</h1>
<br>

<%= form_with url: play_dates_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a playdate"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<% if @play_dates.nil? %>
  <p>You don't have any playdates...</p>
  <% else %>
  <div class="row">
  <% @play_dates.each do |play_date| %>
    <div class="col-md-3 mb-4">
      <div class="card border border-secondary-subtle mb-3 mt-3 w-100 h-100">
        <div class="card-body">
          <h5 class="card-title">Your playdate with <%= play_date.pet.name %></h5>
          <p class="card-text"> Starting at: <%= play_date.start_time %></p>
          <p class="card-text"> Finishing at: <%= play_date.end_time %></p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
<% end %>
<div class="btn btn-outline-success index-button"><%= link_to "Back to all pets", pets_path %></div>
